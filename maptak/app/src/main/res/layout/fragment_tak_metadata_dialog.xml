<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.droptak.android.fragments.dialogs.TakMetadataDialog">
<LinearLayout
    android:id="@+id/takmetadata_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/takmetadata_et_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Key"/>

    <EditText
        android:id="@+id/takmetadata_et_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Value" />

    <Button
        android:id="@+id/takmetadata_btn_add"
        android:text="Add"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/takmetadata_listview"
        android:layout_below="@id/takmetadata_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>


</RelativeLayout>
