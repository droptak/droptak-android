<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/mapinfo_et_mapname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Map Name" />

    <EditText
        android:id="@+id/mapinfo_et_mapdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapinfo_et_mapname"
        android:layout_margin="5dp"
        android:hint="Map Description" />

    <TextView
        android:id="@+id/mapinfo_tv_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapinfo_et_mapdescription"
        android:layout_margin="5dp"
        android:text="Owner: Michael Hockerman"/>

    <Button
        android:id="@+id/mapinfo_bu_editadmins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapinfo_tv_owner"
        android:layout_centerHorizontal="true"
        android:text="Edit Admins"/>


</RelativeLayout>